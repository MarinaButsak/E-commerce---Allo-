      item_list_id: "ви_дивилися",                     // insert the list id where the product is currently displayed
      item_list_name: "Ви дивилися",                   // insert the name of the list where the product is currently displayed
      item_variant: "green",                             // insert an actual product сolor
      price: 7.77,                                       // insert an actual product price. Number or a string. Don't include currency code
      quantity: 1                                        // product quantity. In case of view_item_list, it will usually be equal to 1
